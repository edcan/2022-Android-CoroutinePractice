<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity">

    <TextView
        android:id="@+id/txt_timer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="00:00"
        android:textSize="50sp"

        app:layout_constraintBottom_toTopOf="@id/btn_timer_plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_timer_plus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="4dp"
        android:text="5초 증가"

        android:textSize="24sp"

        app:layout_constraintBottom_toTopOf="@id/btn_timer_timerControl"
        app:layout_constraintEnd_toStartOf="@id/btn_timer_minus"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_timer_minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="4dp"
        android:text="5초 감소"

        android:textSize="24sp"

        app:layout_constraintBottom_toTopOf="@id/btn_timer_timerControl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_timer_plus" />

    <Button
        android:id="@+id/btn_timer_timerControl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="시작"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>